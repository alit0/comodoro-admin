{
  "kind": "collectionType",
  "collectionName": "category",
  "info": {
    "name": "Category"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "icon": {
      "type": "string"
    },
    "children": {
      "type": "component",
      "repeatable": true,
      "component": "category.children"
    }
  }
}
